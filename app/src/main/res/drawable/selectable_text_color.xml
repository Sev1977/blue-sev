<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed -->
    <item android:color="@color/textColorPrimary" android:state_pressed="true"/>

    <!-- Selected -->
    <item android:color="@color/textColorPrimary" android:state_selected="true"/>

    <!-- Disabled -->
    <item android:color="@color/textColorDisabled" android:state_enabled="false"/>

    <!-- Default -->
    <item android:color="@color/textColorSecondary"/>

</selector>

<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fixture_card"
    android:gravity="center"
    android:padding="@dimen/default_activity_margin"
    tools:context=".fragments.FixturePopupFragment">

    <TextView
        android:id="@+id/dateAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Date and time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#191919" />

    <TextView
        android:id="@+id/competition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Competition"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#191919" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="#191919" />

    <TextView
        android:id="@+id/opposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Opposition"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#191919" />

    <TextView
        android:id="@+id/homeOrAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_row="3"
        android:layout_column="2"
        android:text="@string/home"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#191919" />

    <LinearLayout
        android:id="@+id/mainScore"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="36sp"
            android:textColor="#191919"/>

        <TextView
            android:id="@+id/scorers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#191919"/>

    </LinearLayout>

    <GridLayout
        android:id="@+id/extraTime"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:text="Extra time"
            android:textColor="#191919"/>

        <TextView
            android:id="@+id/etHomeGoals"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="end"
            android:text="0"
            android:textSize="26sp"
            android:textColor="#191919"/>

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:text="-"
            android:textSize="26sp"
            android:textColor="#191919"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/etAwayGoals"
            android:layout_row="1"
            android:layout_column="2"
            android:text="0"
            android:textSize="26sp"
            android:textColor="#191919"/>

        <TextView
            android:id="@+id/etScorers"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textColor="#191919"
            android:text="scorers"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/penalties"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <TextView
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:text="Penalties"
            android:textColor="#191919"/>

        <TextView
            android:id="@+id/homePenalties"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="end"
            android:text="0"
            android:textSize="26sp"
            android:textColor="#191919"/>

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:text="-"
            android:textSize="26sp"
            android:textColor="#191919"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/awayPenalties"
            android:layout_row="1"
            android:layout_column="2"
            android:text="0"
            android:textSize="26sp"
            android:textColor="#191919"/>

    </GridLayout>

    <TextView
        android:id="@+id/attendance"
        android:visibility="gone"
        android:layout_row="7"
        android:text="@string/attendance"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="8dp"
        android:textColor="#191919"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_marginTop="16dp"
        android:text="@android:string/cancel" />

    <Button
        android:id="@+id/deleteButton"
        android:text="@string/action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="2"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:text="@string/action_edit" />

</GridLayout>
